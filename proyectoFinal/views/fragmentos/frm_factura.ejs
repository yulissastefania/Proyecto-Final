<script type="text/javascript">
    $(document).ready(function() {
        var dt = new Date();
        var month = dt.getMonth() + 1;
        var day = dt.getDate();
        var year = dt.getFullYear();
        if (day < 10) {
            day = '0' + day;
        }

        if (month < 10) {
            month = '0' + month;
        }


        $.ajax({
            type: "GET",
            url: "/buscarEmpresa",
            success: function(data) {



                $('#nombreEmpresa').html(data.razon_social);
                $('#rucEmpresaF').val(data.ruc);
                $('#numeroFactura').val();
                $('#auto Sri').val();

                $('#razonSocialEmF').val(data.razon_social);
                $('#direccionMatrizEmF').val(data.direc_matriz);
                $('#direccionSuEmF').val(data.direc_sucursal);

                $('#fechaAutoEmpresa').val(month + '/' + day + '/' + year);

            }
        });

        $("#add").click(function() {
            var nuevaFila = "<tr>";
            var aux = $("#tabla tr").length;
            console.log(aux);
            //añadimos las filas y columnas
            nuevaFila += '<td class="service"><input type="number" id="cantidadProductoFactura' + aux + '" placeholder="N°" class="cantidad" ></td>';

            nuevaFila += '<td class="desc" ><input type="number" id="codigoProductoFactura' + aux + '"  class="cantidad" disabled/></td>';

            nuevaFila += '<td class="desc" id="botonAgragegarProducto' + aux + '"><a href="#popup" class="popup-link"><button>Agregar Producto</button></a></td>';

            nuevaFila += '<td class="unit">$<input type="text" id="productoPrecioUnitarioFactura' + aux + '" disabled class="unidades"></td>';

            nuevaFila += '<td class="total">$<input type="text" id="productoPrecioFactura' + aux + '" disabled class="unidades"></td>';
            nuevaFila += "</tr>";

            $("#tabla").append(nuevaFila);
        });

        $("#del").click(function() {

            var trs = $("#tabla tr").length;
            if (trs > 1) {
                // Eliminamos la ultima columna
                $("#tabla tr:last").remove();
            }
        });
        $('#buscarCliente').click(function() {
            $.ajax({
                type: "POST",
                url: "/buscarNuevoCliente",
                data: "cedulaRuc=" + $('#cedulaRucBuscar').val(),
                success: function(data) {
                    console.log(data);
                    if (data.cedula_ruc != "") {
                        var nuevaFila = "";
                        nuevaFila += "<tr>";
                        // añadimos las columnas
                        nuevaFila += "<td colspan='2'>" + data.cedula_ruc + "</td>";
                        //nuevaFila += "<td>" + value.Actors + "</td>";
                        nuevaFila += "<td colspan='2'>" + data.razon_social + "</td>";
                        nuevaFila += "<td colspan='2'>" + data.nombre + " " + data.apellido + "</td>";
                        nuevaFila += "<td colspan='2'>" + data.apellido + "</td>";
                        nuevaFila += "<td colspan='2'>" + data.email + "</td>";

                        nuevaFila += "</tr>";
                        //añadimos la nueva fila a la tabla
                        $("#tablaBuscarClienteFactura tbody").html(nuevaFila);
                    } else {
                        alert("Cliente No encontrado");
                    }

                }
            });
        });
        $('#agregarCliente').click(function() {

            $.ajax({
                type: "POST",
                url: "/buscarNuevoCliente",
                data: "cedulaRuc=" + $('#cedulaRucBuscar').val(),
                success: function(data) {
                    if (data.cedula_ruc != "") {

                        $('#datoNombresComprador').val(data.nombre + " " + data.apellido);
                        $('#datoCedulaRucComprador').val(data.cedula_ruc);
                        $('#datoRazonSocialComprador').val(data.razon_social);
                        $('#datoFechaEmisionComprador').val(month + '/' + day + '/' + year);

                        $('#datoGuieEmisionComprador').val();
                    }

                }
            });
            location.href = '#';
        });
        $('#buscarProductoFactura').click(function() {

            $.ajax({
                type: "POST",
                url: "/buscarProducto",
                data: "text_codPrincipal=" + $('#text_buscarCodPrincipal').val(),
                success: function(data) {
                    var nuevaFila = "";
                    nuevaFila += "<tr>";
                    // añadimos las columnas
                    nuevaFila += "<td>" + data.codigo_principal + "</td>";
                    //nuevaFila += "<td>" + value.Actors + "</td>";

                    nuevaFila += "<td>" + data.nombre + "</td>";
                    nuevaFila += "<td>" + data.marca + "</td>";
                    nuevaFila += "<td>" + data.modelo + "</td>";
                    nuevaFila += "<td>" + data.precio + "</td>";

                    nuevaFila += "</tr>";
                    //añadimos la nueva fila a la tabla
                    $("#tablaBuscarProductoFactura tbody").html(nuevaFila);

                }
            });

        });

        $('#agregarProductoFactura').click(function() {
            var aux = $("#tabla tr").length;
            for (var i = 1; i < aux; i++) {
                var precioUF = "productoPrecioUnitarioFactura" + i;
                if (document.getElementById(precioUF).value == "") {
                    aux = i;
                }
            }
            $.ajax({
                type: "POST",
                url: "/buscarProducto",
                data: "text_codPrincipal=" + $('#text_buscarCodPrincipal').val(),
                success: function(data) {
                    var precioUF = "productoPrecioUnitarioFactura" + aux;
                    var botonAP = "botonAgragegarProducto" + aux;
                    var codigo = "codigoProductoFactura" + aux;
                    var cantidad = "cantidadProductoFactura" + aux;

                    var reemplazoBoton = "<input type='text' id='descripcionProductoFactura" + aux + "' value=" + data.nombre + " disabled/>";
                    document.getElementById(botonAP).innerHTML = reemplazoBoton;

                    var objCantidad = document.getElementById(cantidad).setAttribute("onchange", "agregarValorTotal(" + aux + ")");

                    document.getElementById(precioUF).value = data.precio_unitario;

                    document.getElementById(codigo).value = data.codigo_principal;

                    var precioTotalPF = "productoPrecioFactura" + aux;
                    document.getElementById(precioTotalPF).value = data.precio_Venta;

                }
            });
            location.href = '#';
        });

        $('#finalizaIngreso').click(function() {
            var aux = $("#tabla tr").length;
            var precioFinal=0;
            for (var i = 1; i < aux; i++) {
                var precioUF = "productoPrecioUnitarioFactura" + i;
                var precio = "productoPrecioFactura" + i;

                if (document.getElementById(precio).value != "") {
                    precio = parseFloat(document.getElementById(precio).value).toFixed(2);
                    precioFinal = ((Number(precio).toFixed(2)*1) + (Number(precioFinal).toFixed(2)*1));
                         alert("###################"+precioFinal);



                }
            }
            $('#subTotalNoIva').val(precioFinal);


        });








    });

</script>
