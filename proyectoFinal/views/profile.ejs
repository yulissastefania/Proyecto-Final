<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Facturación Electrónica</title>

    <!--link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous"-->


    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:300,300i,400,400i,500,500i,600,600i,700" rel="stylesheet">

    <!-- Template Styles -->
    <link rel="stylesheet" href="stylesheets/font-awesome.min.css">

    <!-- CSS Reset -->
    <link rel="stylesheet" href="stylesheets/normalize.css">

    <!-- Milligram CSS minified -->
    <link rel="stylesheet" href="stylesheets/milligram.min.css">

    <!-- Main Styles -->
    <link rel="stylesheet" href="stylesheets/estiloApp.css">

    <!-- Estilos de perfil usuario -->
    <link rel="stylesheet" href="stylesheets/estiloProfile.css">

    <!-- jquery mains -->
    <script src="https://code.jquery.com/jquery-1.11.1.min.js"></script>
    <script src="https://code.jquery.com/jquery-migrate-1.2.1.min.js"></script>

    <script src="http://code.jquery.com/jquery-latest.js"></script>


</head>

<body>
    <div class="navbar">
        <div class="row">
            <div class="column column-30 col-site-title"><a href="/app" class="site-title float-left">Facturación Electrónica</a></div>
            <div class="column column-40 col-search">
                <a href="#" class="search-btn "></a>

            </div>


            <div class="column column-30">
                <ul id="menu">
                    <li>

                        <input type="checkbox" name="list" id="nivel1-1">

                        <label for="nivel1-1">
                            <img src="images/logoPerfil.jpg" alt="profile photo" class="circle float-left profile-photo" width="50" height="auto">
                            <h4>
                                <%= nombre%>
                            </h4>

                        </label>
                        <ul class="interior">
                            <li><input type="checkbox" name="list" id="nivel2-1"><a href="/profile"><i class="fas fa-user"></i> Tu perfil</a></li>
                            <li><input type="checkbox" name="list" id="nivel2-1"><a href="/app"><i class="fas fa-file-invoice-dollar"></i> Factura</a></li>
                            <li><input type="checkbox" name="list" id="nivel2-1"><a href="#"> <i class="fas fa-sign-out-alt"></i> Salir</a></li>
                        </ul>
                    </li>

                </ul>
            </div>

        </div>
    </div>

    <div class=" style row">
        <section id="main-content" class="column column-offset-10 ">
            <div class="container " style="padding-top: 60px; background-color: #fff;">

                <div class="card-header">
                    <h2 class="page-header">Perfil</h2>
                </div>

                <div class="row">
                    <div class="col-md-4 col-sm-6 col-xs-12 divIzq">

                    </div>
                    <!-- columna izquierda -->
                    <div class="col-md-4 col-sm-6 col-xs-12">
                        <div class="text-center">
                            <img src="images/pic01.jpg" class="avatar img-circle img-thumbnail imgUser" alt="avatar">
                            <h6>Nombre User</h6>
                            <br>
                            <a href="/editar" class="aEditarPerfil">Editar Perfil</a>

                        </div>
                    </div>
                    <div class="col-md-4 col-sm-6 col-xs-12 divMed">

                    </div>
                    <!-- informacion del usuario -->
                    <div class="col-md-8 col-sm-6 col-xs-12 personal-info">

                        <h3>Información</h3>
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Nombre:</label>

                            <input class="form-control" id="nombreUserIngre" value="-----" type="text" disabled>

                        </div>

                        <div class="form-group">
                            <label class="col-lg-3 control-label">Apellido:</label>
                            <div class="col-lg-8">
                                <input class="form-control" id="ApellidoUserIngre" value="------" type="text" disabled>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-lg-3 control-label">Email:</label>
                            <div class="col-lg-8">
                                <input class="form-control" id="EmailUserIngre" value="------" type="text" disabled>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-lg-3 control-label">Número de Contribuyente:</label>
                            <div class="col-lg-8">
                                <input class="form-control" id="numContribUserIngre" value="------" type="text" disabled>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-lg-3 control-label">RUC:</label>
                            <div class="col-lg-8">
                                <input class="form-control" id="rucUserIngre" value="------" type="text" disabled>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-lg-3 control-label">Razón Social:</label>
                            <div class="col-lg-8">
                                <input class="form-control" id="razonSocialUserIngre" value="------" type="text" disabled>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-lg-3 control-label">Ambiente:</label>
                            <div class="col-lg-8">
                                <input class="form-control" id="ambienteUserIngre" value="--------" type="text" disabled>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-lg-3 control-label">Obligado a llevar Contabilidad:</label>
                            <div class="col-lg-8">
                                <input class="form-control" id="ObligadoUserIngre" value="-------" type="text" disabled>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-lg-3 control-label">Dirección Matriz:</label>
                            <div class="col-lg-8">
                                <input class="form-control" id="direccionMatriUserIngre" value="---------" type="text" disabled>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-lg-3 control-label">Dirección Sucursal:</label>
                            <div class="col-lg-8">
                                <input class="form-control" id="direcSucuUserIngre" value="-------" type="text" disabled>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-lg-3 control-label">Telefóno:</label>
                            <div class="col-lg-8">
                                <input class="form-control" id="telefonoUserIngre" value="---------" type="text" disabled>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </section>
    </div>


    <script src="js/menu.js"></script>
    <script src="js/chart.min.js"></script>
    <script src="js/chart-data.js"></script>
    <script>
        $(document).ready(function() {

            $.ajax({
                type: "get",
                url: "/buscarUsuario",
                success: function(data) {

                    $('#nombreUserIngre').val(data.nombre);
                    $('#ApellidoUserIngre').val(data.apellido);
                    $('#EmailUserIngre').val(data.email);

                }
            });

            $.ajax({
                type: "get",
                url: "/buscarEmpresa",
                success: function(data) {

                    $('#numContribUserIngre').val(data.num_contribuyente);
                    $('#rucUserIngre').val(data.ruc);
                    $('#razonSocialUserIngre').val(data.razon_social);
                    $('#ambienteUserIngre').val(data.ambiente);
                    $('#ObligadoUserIngre').val(data.obligado_contabilidad);
                    $('#direccionMatriUserIngre').val(data.direc_matriz);
                    $('#direcSucuUserIngre').val(data.direc_sucursal);
                    $('#telefonoUserIngre').val(data.telefono);



                }
            });

        });

    </script>


</body>

</html>
